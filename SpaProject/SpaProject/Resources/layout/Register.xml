<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
    android:id="@+id/mainFrame"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    android:gravity="center">
        
        <LinearLayout
            android:id="@+id/usernameView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toStartOf="@id/mainFrame"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:gravity="center">

            <TextView
            android:id="@+id/usernameLabel"
            android:text="Tên đăng nhập"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_gravity="start"
            />
        
            <EditText
            android:id="@+id/usernameTxtbox"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:layout_marginRight="10dp"
            />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/passwordView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/usernameView"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp">

            <TextView
            android:id="@+id/passwordLabel"
            android:text="Mật khẩu"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
             />

            <EditText
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/passwordTxtbox"
                android:layout_gravity="start"
                android:layout_marginRight="10dp"
            />
        </LinearLayout>
    
        <LinearLayout
        android:id="@+id/passwordConfirmView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/passwordView"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp">

            <TextView
            android:id="@+id/passwordConfirmLabel"
            android:text="Xác nhận mật khẩu"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
                />

            <EditText
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/passwordConfirmTxtbox"
                android:layout_gravity="start"
                android:layout_marginRight="10dp"
            />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fullnameView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/passwordConfirmView"
            android:layout_toStartOf="@id/mainFrame"
            android:layout_marginStart="10dp"
            android:gravity="center">

            <TextView
            android:id="@+id/fullnameLabel"
            android:text="Họ và tên"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_gravity="start"
            />
        
            <EditText
            android:id="@+id/fullnameTxtbox"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:layout_marginRight="10dp"
            />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/genderView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/fullnameView"
            android:layout_toStartOf="@id/mainFrame"
            android:layout_marginStart="10dp"
            android:gravity="center">

            <TextView
                android:id="@+id/genderLabel"
                android:text="Giới tính"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_gravity="start"
            />
            <RadioGroup
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radioGroup1">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Nam"
                    android:id="@+id/radioButton1" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nữ"
                    android:id="@+id/radioButton2" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dobView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/genderView"
            android:layout_toStartOf="@id/mainFrame"
            android:layout_marginStart="10dp"
            android:gravity="center">

            <TextView
                android:id="@+id/dobLabel"
                android:text="Ngày sinh"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_gravity="start"
            />
            <CalendarView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/calendarView1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/phoneView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/dobView"
            android:layout_toStartOf="@id/mainFrame"
            android:layout_marginStart="10dp"
            android:gravity="center">

            <TextView
            android:id="@+id/phoneLabel"
            android:text="Số điện thoại"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_gravity="start"
            />
        
            <EditText
            android:id="@+id/phoneTxtbox"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:layout_marginRight="10dp"
            />

        </LinearLayout>

        <CheckBox
            android:text="Tôi đồng ý với chính sách và điều khoản"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@id/phoneView"
            android:id="@+id/checkBox" />

        <Button
        android:id="@+id/registerBtn" 
        android:text="Đăng ký"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkBox"
        android:layout_marginTop="40dp"
        android:background="@drawable/custom_button"
        />
    </RelativeLayout>
</ScrollView>